<control title="Login">
	<css src="/src/App/assets/css/kube.css"/>

	<schema name="login" schema="App\Login\LoginCrate"/>

	<div id="login" m:id="login" class="row centered" m:snippet="login">
		<div class="col col-4">
			<text m:schema="login.login"/>
			<password m:schema="login.password"/>
			<button value="login" m:bind="login" action="on-login()"/>
		</div>
	</div>
	<button value="login" action="on-show()"/>
</control>
