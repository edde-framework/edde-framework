<control title="Login" m:block="content">
	<schema name="login" schema="App\Login\LoginCrate"/>

	<placeholder id="login"/>
	<div id="login" class="row centered" m:snippet="login" m:pass="login">
		<div class="col col-4">
			<text m:schema="login.login"/>
			<password m:schema="login.password"/>
			<button value="login" bind="login" action="@on-login"/>
		</div>
	</div>

	<button value="login" action="@on-show"/>
</control>
