<control>
	<div t:block="hello-world">
		<div class="first">
			<div class="hidden div"/>
		</div>
		<div class="second"/>
		<div class="third">
			<div class="inner-one"/>
			<div class="inner-two"/>
			<div class="inner-three"/>
			<div class="inner-four">
				<div class="deep-one"/>
			</div>
		</div>
	</div>

	<!-- use template as source for block definitions -->
	<t:use src="./block-foo.xml"/>

	<t:include src="deep-block"/>
	<t:include src="deep-block"/>

	<!-- use include as in place expansion of the given template -->
	<t:include src="./include-foo.xml"/>

	<t:include src="block-from-imported-template"/>

	<css src="./foo/bar/boo.css"/>
	<js src="./some/javascript.js"/>

	<css src="edde://css/foundation.min.css"/>

	<button m:action="action-on-the-root()"/>
	<button m:action="@action-on-the-current-contol()"/>
	<button class="just-useless-button-here"/>

	<placeholder id="foo"/>

	<h1 value="foo1"/>
	<h2 value="foo2"/>
	<h3 class="foo3-with-class" value="foo3"/>
	<h4 value="foo4"/>
	<h5 value="foo5"/>
	<h6 value="foo6"/>

	<loop src=".loop-from-root()">
		<div class="$:">
			<t:include src="deep-block"/>
		</div>
	</loop>
