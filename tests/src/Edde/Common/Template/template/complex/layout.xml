<control foo="@current-method-call()" title="foo">
	<t:include src="./pass-include.xml"/>

	<css src="./foo/bar/boo.css"/>
	<schema name="foo" schema="Bar\Foo\Fart\Poo"/>

	<div m:schema="foo.property-here"/>

	<switch src=":gimme-a-switch()">
		<case name="foo">
			<div class="foo-case"/>
		</case>
		<case name="foo">
			<div class="foo-case2"/>
		</case>
		<case name="bar">
			<div class="foo-case3"/>
		</case>
	</switch>
	<div class="inline-switch" m:switch=":gimme-a-switch()">
		<div class="foo-case" m:case="foo"/>
		<div class="foo-case2" m:case="foo"/>
		<div class="foo-case3" m:case="poo"/>
	</div>
	<span class="double-include" t:include="./double-pass-include.xml"/>
	<span class="pass-child 01" t:include="./pass-include.xml" m:pass-child=":pass-child()"/>
	<span class="pass-child 02" t:include="./double-pass-include.xml" m:pass-child=":pass-child2()"/>
	<span class="pass-child 03" m:pass-child=":pass-child3()">
		<div class="child-01"/>
		<div class="child-02"/>
		<div class="child-03"/>
	</span>

	<span class="I'll see this one" m:if=":true-variable-reference">
		<div class="foo"/>
	</span>
	<span class="This one will not pass" m:if=":false-variable-reference"/>

	<span class="I'll see this one()" m:if=":true-method()">
		<div class="foo"/>
	</span>
	<span class="This one will not pass()" m:if=":false-method()"/>

	<div class="strange-if-usecase" m:if=":gimme-some-iterator()">
		<span m:loop="?:" class="$:"/>
	</div>

	<span class="included-variable" t:include="./pass-include.xml" m:pass=":included-variable"/>

	<span class="foo" m:pass=":span-method-call()"/>

	<div class="this-will-be-loaded-on-demand" m:pass=":some-variable">
		<!--
			m:load will load the given template on demand; it supports
			relative file reference (./ prefix) and "absolute" path reference from
			application root (/ prefix)

			the template will be executed on root snippet call (a snippet without a name)
		-->
		<m:load src="./on-demand.xml"/>
	</div>
	<div class="this-will-be-loaded-on-demand" m:snippet="beast-on-demand">
		<!--
			m:load will load the given template on demand; it supports
			relative file reference (./ prefix) and "absolute" path reference from
			application root (/ prefix)

			the template will be executed on root snippet call (a snippet without a name)
		-->
		<m:load src="./on-demand.xml"/>
	</div>

	<m:use src="deep-block"/>
	<m:use src="whoo-whaa"/>
	<m:use src="block-from-imported-template"/>

	<call method="\SomeService\From\Container::call()"/>
	<call method="@middle-local-method-call()"/>
	<call method=".middle-root-method-call()"/>

	<div value=".root-method-call()"/>
	<h1 value=".root-method-call()"/>

	<div t:block="hello-world">
		<div class="first">
			<div class="hidden div"/>
		</div>
		<div class="second"/>
		<div class="third">
			<div class="inner-one"/>
			<div class="inner-two"/>
			<div class="inner-three"/>
			<div class="inner-four">
				<div class="deep-one"/>
			</div>
		</div>
	</div>

	<!--
		t:import macro executes the given template but do not modify the current node tree;
		this is useful for loading external block definitions (t:block macros)
	-->
	<t:import src="./block-foo.xml"/>

	<!--
		t:include macro will include the given source in the current node tree, so node tree
		will be modified and executed in compile time
	-->
	<t:include src="deep-block"/>
	<t:include src="deep-block"/>

	<!-- use include as in place expansion of the given template -->
	<t:include src="./include-foo.xml"/>

	<t:include src="block-from-imported-template"/>

	<js src="./some/javascript.js"/>

	<css src="edde://css/foundation.min.css"/>

	<button action=".action-on-the-root()"/>
	<button action="@action-on-the-current-contol()"/>
	<button action=":action-on-the-current-contol()"/>
	<button class="just-useless-button-here"/>

	<placeholder id="foo"/>

	<div class="thie-piece-will-not-be-visible" m:snippet="the-name-of-this-snippet">
		<div class="foo"/>
	</div>

	<h1 value="foo1"/>
	<h2 value="foo2"/>
	<h3 class="foo3-with-class" value="foo3"/>
	<h4 value="foo4"/>
	<h5 value="foo5" class=".root-method-call()"/>
	<h6 value="foo6"/>

	<loop src=".loop-from-root()">
		<div class="$:">
			<t:include src="deep-block"/>
		</div>
	</loop>
	<loop src=".loop-over-loop-from-root()">
		<div class="$#" empty-attribute=""/>
		<div class="wrap">
			<loop src="$:">
				<div class="$#" some-attribute="$#1" root-key="$#.">
					<t:include src="deep-block"/>
				</div>
			</loop>
		</div>
		<!-- root reference -->
		<div class="$#." value="foo"/>
		<!-- nearest root reference -->
		<div class="$#$" value="foo"/>
		<!-- jump reference -->
		<div class="$#0" value="foo"/>
	</loop>
	<custom-control>
		<loop src="@loop-from-local-control()">
			<loop src="@loop-from-local-control()">
				<div class="$:->get-class()" root="$:.->get-class()" super-root="$:1->get-class()">
					<t:include src="./include-foo.xml"/>
				</div>
			</loop>
		</loop>
	</custom-control>
</control>
