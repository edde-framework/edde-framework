<control>
	<div value="hello world!">
		<div class="first">
			<div class="hidden div"/>
		</div>
		<div class="second"/>
		<div class="third">
			<div class="inner-one"/>
			<div class="inner-two"/>
			<div class="inner-three"/>
			<div class="inner-four">
				<div class="deep-one"/>
			</div>
		</div>
	</div>

	<!-- use template as source for block definitions -->
	<t:use src="./block-foo.xml"/>

	<t:include src="deep-block"/>

	<!-- use include as in place expansion of the given template -->
	<t:include src="./include-foo.xml"/>
</control>
